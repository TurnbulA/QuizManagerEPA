@page
@model QuizManager.Pages.Questions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" onsubmit="removeSpaces()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question.QuestionContent" class="control-label"></label>
                <input asp-for="Question.QuestionContent" class="form-control questionInput" />
                <span asp-validation-for="Question.QuestionContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.QuizName" class="control-label"></label>
                <select asp-for="Question.QuizName" class="form-control quizSelect" asp-items="ViewBag.QuizName">
                    <option class="blankOption" disabled selected value="">--Select an Option--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    window.addEventListener("load", () => {
        if (sessionStorage.length == 1) {
            quizName = sessionStorage.getItem("quizName");
            quizName = quizName.replace(/\s/g, "");
            selectMenu = document.querySelector(".quizSelect");
            options = [...selectMenu.getElementsByTagName("option")];
            options.forEach(option => {
                option.setAttribute("disabled", true);
                option.setAttribute("value", option.value.replace(/\s/g,""));
                if (option.classList.contains("blankOption")) {
                    option.setAttribute("value", "")
                }
            })
            
            target = document.querySelector("[value= " + quizName + "]")
            target.setAttribute("selected", true)                        
            target.removeAttribute("disabled")
            sessionStorage.clear();
        }
    });
</script>