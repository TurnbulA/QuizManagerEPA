@page
@model QuizManager.Pages.Questions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.QuestionContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.QuestionContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.QuizName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.QuizName)
        </dd>
    </dl>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Answer[0].AnswerContent)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Answer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.AnswerContent)
                </td>
                
            </tr>
        }
        </tbody>
    </table>
    <form method="post">
        <input type="hidden" asp-for="Question.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="return btn btn-light" asp-page="./Index">Back to List</a>
    </form>
</div>

<script>
    returnLink = document.querySelector(".return");
    window.addEventListener('load', e => {
        returnLink.href = `/Quizzes/Details?id=${@Model.Question.QuizRef}`;
    });
</script>
